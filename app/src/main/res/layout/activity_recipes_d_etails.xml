    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/details_pic"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cookbook_img_1"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/details_pic"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:id="@+id/card_data"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
             <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="6dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Recipe Name "
                        android:textSize="18sp"
                        android:gravity="left"
                        android:layout_weight=".7"

                    />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="16sp"
                        android:id="@+id/recipe_name"
                        android:layout_weight="1.3"
                     />
        </LinearLayout>
             <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prep Time     : "
                        android:textSize="18sp"
                        android:gravity="left"
                        android:layout_weight=".7"

                    />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="16sp"
                        android:layout_weight="1.3"
                     />
        </LinearLayout>
             <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cook Time     : "
                        android:textSize="18sp"
                        android:gravity="left"
                        android:layout_weight=".7"

                    />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="16sp"

                        android:layout_weight="1.3"
                     />
        </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_below="@+id/card_data"
        android:id="@+id/comment_box"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  Enter the comment.... "
            android:id="@+id/comment_input"
            android:background="@drawable/input_bg"
            android:maxLines="5"
            android:layout_weight=".2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:onClick="addComment"
            android:tint="@color/purple_500"
            android:src="@drawable/ic_baseline_send_24"
            />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/comment_recylerview"
        android:layout_below="@+id/comment_box"
        tools:itemCount="5"
        tools:listitem="@layout/comment_string"
        />

</RelativeLayout>
